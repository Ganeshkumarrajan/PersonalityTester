<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PersonalityTester" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="smallText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="mediumText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="mediumNormalText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="largeText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="largeErrorText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>
    <style name="radioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/secondary_color</item>
    </style>

    <style name="numberPicker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/primary_color</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:background">@color/secondary_color</item>
    </style>

</resources>